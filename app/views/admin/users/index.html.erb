<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', admin_user_url(user) , class: 'btn btn-default'%></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) , class: 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', admin_user_url(user), method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_admin_user_path , class: 'btn btn-success'%>
